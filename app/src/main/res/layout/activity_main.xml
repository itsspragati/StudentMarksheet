<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<EditText
    android:id="@+id/editTextSubject1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Subject 1 Marks" />

<EditText
    android:id="@+id/editTextSubject2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/editTextSubject1"
    android:hint="Subject 2 Marks" />

<Button
    android:id="@+id/buttonCalculateResult"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/editTextSubject2"
    android:layout_centerHorizontal="true"
    android:text="Calculate Result" />

</RelativeLayout>
